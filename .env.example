# ORION Environment Configuration
#
# Copy this file to .env and fill in your values.
# NEVER commit .env to git (it is in .gitignore).
#
# This file documents all environment variables used by ORION modules.

# =============================================================================
# Core Settings
# =============================================================================

# Current autonomy level (N0=observe, N1=suggest, N2=execute SAFE, N3=execute with approval)
# CRITICAL: Default is N0 for maximum safety. Only change after explicit decision.
ORION_AUTONOMY_LEVEL=N0

# ORION environment (dev, staging, prod)
ORION_ENV=dev

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# =============================================================================
# Redis Configuration (Event Bus)
# =============================================================================

# Redis host for event bus
REDIS_HOST=localhost

# Redis port
REDIS_PORT=6379

# Redis password (leave empty if no password)
REDIS_PASSWORD=

# Redis DB number for ORION (0-15)
REDIS_DB=0

# Redis connection pool size
REDIS_POOL_SIZE=10

# Redis connection timeout (seconds)
REDIS_TIMEOUT=5

# =============================================================================
# Telegram Approval Bot (orion-approval-telegram)
# =============================================================================

# Telegram bot token (obtain from @BotFather)
# REQUIRED for orion-approval-telegram to function
TELEGRAM_BOT_TOKEN=

# Telegram chat ID for approval notifications (your user ID or group ID)
# REQUIRED for orion-approval-telegram to function
TELEGRAM_CHAT_ID=

# Comma-separated list of authorized Telegram user IDs who can approve actions
# REQUIRED for orion-approval-telegram to function
TELEGRAM_AUTHORIZED_USERS=

# =============================================================================
# orion-guardian Configuration
# =============================================================================

# Correlation window for incident detection (seconds)
GUARDIAN_CORRELATION_WINDOW=60

# Minimum events required to create an incident
GUARDIAN_MIN_EVENTS=1

# =============================================================================
# orion-brain Configuration
# =============================================================================

# Path to policy files directory
BRAIN_POLICY_DIR=./policies

# Enable dry-run mode (simulates decisions without emitting actions)
BRAIN_DRY_RUN=false

# =============================================================================
# orion-commander Configuration
# =============================================================================

# Enable dry-run mode (simulates action execution without actually executing)
COMMANDER_DRY_RUN=false

# Action execution timeout (seconds)
COMMANDER_EXEC_TIMEOUT=30

# Enable rollback on action failure
COMMANDER_ROLLBACK_ENABLED=true

# =============================================================================
# orion-edge-agent Configuration (Robot Control)
# =============================================================================

# MQTT broker host for edge telemetry
MQTT_HOST=localhost

# MQTT broker port
MQTT_PORT=1883

# MQTT username (leave empty if no auth)
MQTT_USERNAME=

# MQTT password (leave empty if no auth)
MQTT_PASSWORD=

# MQTT topic prefix for edge devices
MQTT_TOPIC_PREFIX=orion/edge

# Edge device ID (unique identifier for this edge device)
EDGE_DEVICE_ID=

# Edge device type (e.g., hexapod, quadruped, rover)
EDGE_DEVICE_TYPE=

# =============================================================================
# orion-api Configuration
# =============================================================================

# API server host
API_HOST=0.0.0.0

# API server port
API_PORT=8000

# Enable API authentication
API_AUTH_ENABLED=true

# API secret key for JWT signing (generate with: openssl rand -hex 32)
API_SECRET_KEY=

# =============================================================================
# orion-memory Configuration (Vector DB for Post-Mortems)
# =============================================================================

# Vector DB backend (chroma, qdrant, or memory)
MEMORY_VECTOR_DB=memory

# Vector DB connection string (if using external DB)
MEMORY_VECTOR_DB_URL=

# Embedding model for semantic search (openai, local, or none)
MEMORY_EMBEDDING_MODEL=none

# OpenAI API key (if using OpenAI embeddings)
OPENAI_API_KEY=

# =============================================================================
# Development & Testing
# =============================================================================

# Enable debug mode (more verbose logging, dev tools)
DEBUG=false

# Enable test mode (use in-memory backends, mock external services)
TEST_MODE=false

# Disable contract validation (DANGEROUS - only for development)
# NEVER set to true in production
DISABLE_CONTRACT_VALIDATION=false
